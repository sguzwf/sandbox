doctype html
html(ng-app="caasi")
  head
    meta(charset="utf-8")
    title Angular Scroll Spy
    style.
      .scroll-spy {
        position: relative;
      }
      .spy-menu {
        position: fixed;
        top: 0;
        right: 0;
        list-style: none;
      }
      .spy-menu .highlight {
        background-color: red;
      }
      .spy-menu .highlight a {
        color: white;
      }
  body(ng-controller="SpyCtrl")
    div(scroll-spy)
      .article(ng-repeat="article in articles")
        h1(spy) {{article.heading}}
        p {{article.content}}
    script(src="//code.jquery.com/jquery-2.1.0.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.10/angular.min.js")
    script(src="/js/angular/spy/services.js")
    script(src="/js/angular/spy/directives.js")
    script(src="/js/angular/spy/main.js")
